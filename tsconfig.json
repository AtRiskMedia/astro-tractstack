{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/pages/*": ["src/pages/*"]
    },
    "types": [
      "node",
      "astro",
      "@astrojs/react",
      "@types/react",
      "@types/react-dom"
    ]
  },
  "include": [
    "index.ts",
    "config.ts",
    "types.ts",
    "virtual.d.ts",
    "utils/**/*.ts",
    "bin/**/*.js",
    "templates/**/*",
    "templates/src/types/astro.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
