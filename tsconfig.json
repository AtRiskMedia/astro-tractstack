{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "index.ts",
    "config.ts",
    "types.ts",
    "virtual.d.ts",
    "utils/**/*.ts",
    "bin/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "templates"
  ]
}
